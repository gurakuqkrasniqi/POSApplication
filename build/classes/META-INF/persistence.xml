    <class>posapplication.entity.Customer</class>
    <class>posapplication.entity.SaleDetails</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://localhost:7101;databaseName=posDB;user=POS_User;password=123456"/>
